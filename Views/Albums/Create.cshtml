        html += '<span class="field-validation-valid text-danger" data-valmsg-for="songs[' + (rowCount - 1) + '].nom" data-valmsg-replace="true"></span>'
        html += '</div>'
        html += '<div class="mb-3">'
        html += '<label class="form-label" for="songs[' + (rowCount - 1) + '].description">Song description</label>'
        html += '<input type="text" class="form-control" name="songs[' + (rowCount - 1) + '].description"  />';
        html += '<span class="field-validation-valid text-danger" data-valmsg-for="songs[' + (rowCount - 1) + '].description" data-valmsg-replace="true"></span>'
        html += '</div>'
        html += '<div class="mb-3">'
        html += '<label class="form-label" for="songs[' + (rowCount - 1) + '].category">Song category</label>'
        html += '<select data-val="true" class="form-control" data-val-required="The category field is required." id="category" name="songs[' + (rowCount - 1) + '].category"><option value="0">Pop</option>'
