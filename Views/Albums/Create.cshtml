@model Spotify_clone2.ViewModels.CreateAlbumViewModel;

@{
    ViewData["Title"] = "Create";
}
<section class="player-section set-bg" data-setbg="/img/matt-botsford-OKLqGsCT8qs-unsplash.jpg">
    <div class="player-box" style="background-color: transparent;">
        <div class="container">
            <h1 style="color: #fff;"> Create Album</h1>
        </div>
    </div>
</section>
<section class="songs-details-section">

    <div class="container">
        <div class="col" style="justify-content: center;display: flex;">
            <div class="col-md-8">
                @using (Html.BeginForm("Create", "Albums", FormMethod.Post))
                {
                    @Html.ValidationSummary(false,"",new { @class = "text-danger"})

                    <div class="mb-3">
                        @Html.LabelFor(model => model.name,new { @class ="form-label" })
                        @Html.TextBoxFor(model => model.name,new { @class ="form-control" })
                        @Html.ValidationMessageFor(model => model.name,"",new { @class = "text-danger" })
                    </div>
                    <div id="newRow">
                        <input type="hidden" id="total" value="0" />
                    </div>
                    <div class="mb-3">
                        <button id="addRow" type="button" class="btn btn-info">Add</button>
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn btn-blue text-center">Create</button>
                    </div>

                }

            </div>
        </div>
    </div>
</section>
@section Scripts
{
<script>
    $("#addRow").click(function () {
        var rowCount = parseInt($("#total").val());
        rowCount++;
        $("#total").val(rowCount);
        var html = '';
        html += '<div id="inputRow">';
        html += '<h3> Song number ' + (rowCount) + '</h3>'
        html += '<div class="mb-3">'
        html += '<label class="form-label" for="songs[' + (rowCount - 1) + '].nom">Song name</label>'
        html += '<input type="text" class="form-control" name="songs[' + (rowCount - 1) + '].nom"  />';
        html += '<span class="field-validation-valid text-danger" data-valmsg-for="songs[' + (rowCount - 1) + '].nom" data-valmsg-replace="true"></span>'
        html += '</div>'
        html += '<div class="mb-3">'
        html += '<label class="form-label" for="songs[' + (rowCount - 1) + '].description">Song description</label>'
        html += '<input type="text" class="form-control" name="songs[' + (rowCount - 1) + '].description"  />';
        html += '<span class="field-validation-valid text-danger" data-valmsg-for="songs[' + (rowCount - 1) + '].description" data-valmsg-replace="true"></span>'
        html += '</div>'
        html += '<div class="mb-3">'
        html += '<label class="form-label" for="songs[' + (rowCount - 1) + '].category">Song category</label>'
        html += '<select data-val="true" class="form-control" data-val-required="The category field is required." id="category" name="songs[' + (rowCount - 1) + '].category"><option value="0">Pop</option>'
        html += '<option value="1">Classical</option>'
        html += '<option value="2">Hip_Hop</option>'
        html += '<option value="3">EDM</option>'
        html += '<option value="4">Country</option>'
        html += '<option value="5">Metal</option>'
        html += '<option value="6">Gospel</option>'
        html += '<option value="7">Folk</option>'
        html += '<option value="8">Jazz</option>'
        html += '<option value="9">Ballads</option>'
        html += '<option value="10">Blues</option>'
        html += '<option value="11">Funk</option>'
        html += '<option value="12">Reggae</option>'
        html += '<option value="13">Ambient</option>'
        html += '<option value="14">World</option>'
        html += '</select>'
        html += '</div>'
        html += '<div class="mb-3">'
        //add more inputs here...
        html += '<button id="removeRow" type="button" class="btn btn-danger">Remove</button>'
        html += '</div >'
        html += '</div>';

        $('#newRow').append(html);
    });
    $(document).on('click', '#removeRow', function () {
        var rowCount = parseInt($("#total").val());
        rowCount--;
        $("#total").val(rowCount);
        $(this).closest('#inputRow').remove();
    });
</script>
}
