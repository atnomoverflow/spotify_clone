@model Spotify_clone2.ViewModels.CreateAlbumViewModel;

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_RGateway.cshtml";

}
<section class="player-section set-bg" data-setbg="/img/matt-botsford-OKLqGsCT8qs-unsplash.jpg">
    <div class="player-box" style="background-color: transparent;">
        <div class="container">
            <h1 style="color: #fff;"> Create Album</h1>
        </div>
    </div>
</section>
<section class="songs-details-section">

    <div class="container">
        <div class="col" style="justify-content: center;display: flex;">
            <div class="col-md-8">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="mb-3">
                        <label asp-for="name" class="form-label"></label>
                        <input asp-for="name" class="form-control" />
                        <span asp-validation-for="name" class="field-validation-valid text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="albumCover">upload Album Cover</label>
                        <input class="form-control" type="file" asp-for="albumCover" required>
                        <span asp-validation-for="albumCover" class="field-validation-valid text-danger"></span>
                    </div>
                    <div id="newRow">
                        <input type="hidden" id="total" value="0" />
                    </div>
                    <div class="mb-3">
                        <button id="addRow" type="button" class="btn btn-info">Add</button>
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn btn-blue text-center">Create</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</section>
@section Scripts
{
<script>
    $("#addRow").click(function () {
        var rowCount = parseInt($("#total").val());
        rowCount++;
        $("#total").val(rowCount);
        var html = '';
