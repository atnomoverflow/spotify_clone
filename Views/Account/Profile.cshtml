@model Spotify_clone2.ViewModels.ProfileViewModel;

@{
    ViewData["Title"] = "Profile";

}

<section class="player-section set-bg" data-setbg="/img/player-bg.jpg">
    <div class="player-box">
        <div class="tarck-thumb-warp">
            <div class="tarck-thumb">
                <img src="~/img/wave-thumb.jpg" alt="">
            </div>
        </div>
        <div class="wave-player-warp">
            <div class="row">
                <div class="col-lg-8">
                    <div class="wave-player-info">
                        <h2>@ViewBag.clientPrenom @ViewBag.clientNom </h2>
                        <p>@ViewBag.clientEmail</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="songs-details-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="song-details-box">
                    <h3>Profile</h3>
                    @using (Html.BeginForm("changeUserDetail", "Account", FormMethod.Post))

                    {
                        @Html.ValidationSummary(false,"",new { @class = "text-danger"})
                        <div class="mb-3">
                            @Html.LabelFor(model => model.UserDetailViewModel.Nom,new { @class = "form-label" })
                            @Html.TextBoxFor(model => model.UserDetailViewModel.Nom,new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.UserDetailViewModel.Nom,"", new { @class =
                        "text-danger" })
                        </div>
                        <div class="mb-3">

                            @Html.LabelFor(model => model.UserDetailViewModel.Prenom,new { @class = "form-label" })
                            @Html.TextBoxFor(model => model.UserDetailViewModel.Prenom,new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.UserDetailViewModel.Prenom,"", new { @class =
                        "text-danger" })
                        </div>
                        <div class="mb-3">
                            @Html.LabelFor(model => model.UserDetailViewModel.DOB,new { @class = "form-label" })
                            @Html.TextBoxFor(model => model.UserDetailViewModel.DOB,new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.UserDetailViewModel.DOB,"", new { @class =
                        "text-danger" })
                        </div>
                        @* <div class="row px-3">
                            <label asp-for="Password" class="mb-0 text-sm"></label>
                            <input asp-for="Password" class="mb-4" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="row px-3">
                            <label asp-for="ConfirmPassword" class="mb-0 text-sm"></label>
                            <input asp-for="ConfirmPassword" class="mb-4" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div> *@
                        <div class="mb-3">
                            @Html.LabelFor(model => model.UserDetailViewModel.Username,new { @class = "form-label" })
                            @Html.TextBoxFor(model => model.UserDetailViewModel.Username,new { @class = "form-control"
                        })
                            @Html.ValidationMessageFor(model => model.UserDetailViewModel.Username,"", new { @class =
                        "text-danger" })
                        </div>
                        <button type="submit" class="btn btn-secondary">Submit</button>
                    }
                </div>
            </div>
            <div class="col-lg-6">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="song-details-box">
                            <h3>Change Password</h3>
                            @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
                            {
                                @Html.ValidationSummary(false,"",new { @class = "text-danger"})

                                <div class="mb-3">
                                    @Html.LabelFor(model => model.ChangePasswordViewModel.OldPassword,new { @class =
                                "form-label" })
                                    @Html.TextBoxFor(model => model.ChangePasswordViewModel.OldPassword,new { @class =
                                "form-control" })
                                    @Html.ValidationMessageFor(model => model.ChangePasswordViewModel.OldPassword,"",
                                new { @class = "text-danger" })
                                </div>
                                <div class="mb-3">
                                    @Html.LabelFor(model => model.ChangePasswordViewModel.NewPassword,new { @class =
                                "form-label" })
                                    @Html.TextBoxFor(model => model.ChangePasswordViewModel.NewPassword,new { @class =
                                "form-control" })
                                    @Html.ValidationMessageFor(model => model.ChangePasswordViewModel.NewPassword,"",
                                new { @class = "text-danger" })
                                </div>
                                <div class="mb-3">
                                    @Html.LabelFor(model => model.ChangePasswordViewModel.ConfirmPassword,new { @class =
                                "form-label" })
                                    @Html.TextBoxFor(model => model.ChangePasswordViewModel.ConfirmPassword,new { @class =
                                "form-control" })
                                    @Html.ValidationMessageFor(model => model.ChangePasswordViewModel.ConfirmPassword,"",
                                new { @class = "text-danger" })
                                </div>
                                <button type="submit" class="btn btn-secondary">Submit</button>
                            }

                        </div>
                    </div>
                </div>
            </div>
</section>

